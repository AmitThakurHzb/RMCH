<mvc:View 
	controllerName="rmch.controller.View" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<StandardTile 
						title="RMC-HANA LINK" 
						info="Info" icon="sap-icon://customer" 
						activeIcon="sap-icon://customer" number="12" numberUnit="eur"
						infoState="Success" id="__tile0" 
						press="onClick"
					/>
					<GenericTile header="RMC DASHBOARD" size="M" frameType="OneByOne" press="press">
						<tileContent>
							<TileContent footer="Current Quarter" unit="EUR" size="M">
								<content>
									<NumericContent size="M" scale="M" value="1.96" valueColor="Error" indicator="Up"/>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
